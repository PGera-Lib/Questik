<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/material_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/questik_btn_ripple"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/material_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Наименование"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/material_item_price_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defualt_margin"
        android:layout_marginTop="@dimen/defualt_margin"
        android:layout_marginBottom="@dimen/defualt_margin"
        android:text="Цена: "
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/material_item_name" />

    <TextView
        android:id="@+id/material_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defualt_margin"
        android:layout_marginTop="@dimen/defualt_margin"
        android:layout_marginBottom="@dimen/defualt_margin"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintStart_toEndOf="@id/material_item_price_hint"
        app:layout_constraintTop_toBottomOf="@id/material_item_name"
        tools:text="2000,00 руб" />
    <TextView
        android:id="@+id/material_item_plu_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defualt_margin"
        android:layout_marginTop="@dimen/defualt_margin"
        android:layout_marginBottom="@dimen/defualt_margin"
        android:text="SAP ID: "
        app:layout_constraintEnd_toStartOf="@id/material_item_plu"
        app:layout_constraintTop_toBottomOf="@id/material_item_name"
        android:textSize="@dimen/normal_text_size"
 />

    <TextView
        android:id="@+id/material_item_plu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defualt_margin"
        android:layout_marginTop="@dimen/defualt_margin"
        android:layout_marginBottom="@dimen/defualt_margin"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/material_item_name"
        tools:text="MAT1234456" />

</androidx.constraintlayout.widget.ConstraintLayout>