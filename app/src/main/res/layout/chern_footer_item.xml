<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/text_itog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Итого:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/str_itog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0 руб."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_itog"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/text_rabot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работы - "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_itog"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/str_itog_rabot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0 руб."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_rabot"
        app:layout_constraintTop_toBottomOf="@id/text_itog"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/text_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Материалы - "
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toStartOf="@id/str_itog_material"
        />
    <TextView
        android:id="@+id/str_itog_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0 руб."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_itog"
        android:layout_margin="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>