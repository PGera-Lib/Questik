<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.help.HelpFragment">

    <TextView
        android:id="@+id/txt_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Математика в програмировании:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/material_drawer_primary_text" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txt_string1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_string"
        android:text="0"
        android:textColor="@color/material_drawer_primary_text" />
</androidx.constraintlayout.widget.ConstraintLayout>