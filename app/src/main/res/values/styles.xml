<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="QuestikTheme" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="popupTheme">@style/actionMenu</item>
        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected
        </item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected
        </item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
        <item name="material_drawer_header_selection_subtext">
            @color/material_drawer_dark_header_selection_subtext
        </item>
        <item name="material_drawer_legacy_style">false
        </item> <!-- Enables legacy Material 1 style -->
    </style>

    <style name="settings_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <!--        <item name="background">@drawable/questik_btn_ripple</item>
                <item name="android:clickable">true</item>
                <item name="android:focusable">true</item>-->
    </style>

    <style name="actionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorTextBlack</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_marginStart">@dimen/defualt_margin</item>
    </style>

    <style name="lable_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/settings_lable_text_size</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:layout_marginStart">@dimen/defualt_margin</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorTextGray</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginStart">@dimen/defualt_margin</item>
        <item name="android:layout_marginEnd">@dimen/defualt_margin</item>
    </style>

    <style name="settings_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/defualt_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_text_account_marginTop</item>
    </style>

    <style name="main_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/defualt_margin</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:inputType">phone</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextGray</item>
    </style>
</resources>